#Import the Tkinter library
import tkinter as tk

#Create a window
window = tk.Tk()

#Ensure the window has a fixed size
window.minsize(height=350, width=550)

#Give the window a title
window.title('This is a test')

#Give the window a label
windowLabel = tk.Label(text='And here is the label!', font=('Comic sans ms', 26, 'italic'))

#Pack the label to ensure it appears in the window, you can define where it will be positioned
windowLabel.pack(side='top')

#Have an infinite mainloop to ensure the window stays open
window.mainloop()
