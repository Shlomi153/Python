def sumargs(*args):
    sum = 0
    i = 0
    #print(args[0][0])

    for n in args[0]:
        sum += n

    return sum

l = [1, 2, 3, 4, 5]

result = sumargs(l)

print(f'The sum of all the numbers in the list: {l} is: {result}.')

